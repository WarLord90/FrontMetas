@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <div class="container mt-4">
        <h1 class="text-center mb-4">Metas</h1>
        <div class="row">
            <!-- Div de izquierda metas -->
            <div class="col-4 custom-card">
                <button class="btn btn-primary mb-3" id="btnNvaMeta">
                    <i class="bi bi-plus"></i> Nueva Meta
                </button>
                <table id="metasTable" class="table table-striped">
                    <thead>
                        <tr>
                            <th>Nombre de la Meta</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Meta 1</td>
                            <td>
                                <button class="btn btn-sm btn-info me-2">
                                    <i class="bi bi-pencil"></i>
                                </button>
                                <button class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2">
                                <div class="progress mt-2" style="height: 1.5rem;">
                                    <div class="progress-bar" role="progressbar" style="width: 60%;" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100">60%</div>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>Meta 2</td>
                            <td>
                                <button class="btn btn-sm btn-info me-2">
                                    <i class="bi bi-pencil"></i>
                                </button>
                                <button class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2">
                                <div class="progress mt-2" style="height: 1.5rem;">
                                    <div class="progress-bar" role="progressbar" style="width: 30%;" aria-valuenow="30" aria-valuemin="0" aria-valuemax="100">30%</div>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <!-- Div de izquierda tareas -->
            <div class="col-8 custom-card">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h3>Tareas</h3>
                    <button class="btn btn-primary mb-3" id="btnNvaTarea">
                        <i class="bi bi-plus"></i> Nueva Tarea
                    </button>
                </div>
                <table id="tblTareas" class="table table-striped">
                    <thead>
                        <tr>
                            <th>Nombre de la Tarea</th>
                            <th>Fecha Creada</th>
                            <th>Estatus</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Tarea 1</td>
                            <td>2024-07-24</td>
                            <td>En Progreso</td>
                            <td>
                                <button class="btn btn-sm btn-info me-2">
                                    <i class="bi bi-pencil"></i>
                                </button>
                                <button class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </td>
                        </tr>
                        <tr>
                            <td>Tarea 2</td>
                            <td>2024-07-23</td>
                            <td>Completada</td>
                            <td>
                                <button class="btn btn-sm btn-info me-2">
                                    <i class="bi bi-pencil"></i>
                                </button>
                                <button class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Modal Nueva Meta -->
<div id="mdlMeta" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Nueva Meta</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="metaForm">
                    <div class="form-group">
                        <label for="txtMetaNombre">Nombre de la Meta</label>
                        <input type="text" class="form-control" id="txtMetaNombre" placeholder="Ingrese el nombre de la meta">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" id="btnRegistraMeta">Registrar Meta</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal Nueva Tarea -->
<div id="mdlTarea" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Nueva Tarea</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="taskForm">
                    <div class="form-group">
                        <label for="txtTareaNombre">Nombre de la Tarea</label>
                        <input type="text" class="form-control" id="txtTareaNombre" placeholder="Ingrese el nombre de la tarea">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" id="btnRegistraTarea">Registra Tarea</button>
            </div>
        </div>
    </div>
</div>
